<%- include('../partials/header') %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelpcamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <img class="card-img-top img-fluid" src="<%= campg.image %>" width="100%" alt="">
                <div class="card-body">
                    <h4 class="card-title"><%= campg.name %> <span class="float-right">₹ 1000/Night</span></h4>
                    <p class="px-1"><%=campg.description%></p>
                </div>  
            </div>
            <div class="card">
                <div class="card-body">
                    <span class="float-right"><a class="btn btn-outline-danger btn-sm" href="/campgrounds/<%=campg._id%>/comments/new">New comment</a></span>
                    <br><hr>
                    <%campg.comments.forEach(function(camp){%>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%=camp.author%></strong>
                            <span class="float-right">10 days ago</span>
                            <p><%=camp.text%></p>
                        </div>
                    </div>
                    <%})%>
                </div>
            </div>
            
            <!-- <figure class="figure">
                <img  class="img-fluid figure-img img-thumbnail" src="<%= campg.image %>" alt="">
                <h5 class="fig-caption float-right">₹ 1000/Night</h5>
                <h5 class="fig-caption"><%= campg.name %></h5>
                
            </figure> -->
        </div>
    </div>
</div>


<%- include('../partials/footer') %>
